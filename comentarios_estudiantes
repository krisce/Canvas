using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace comentarios_estudiantes
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void button1_Click(object sender, EventArgs e)
        {
            // Agrega asignaciones al ListBox
            listBox1.Items.Add("curso martes");
            listBox1.Items.Add(" avance del proyecto");
            listBox1.Items.Add("tarea 2");
        }


        private void listBox1_SelectedIndexChanged(object sender, EventArgs e)
        {
            if (listBox1.SelectedItem != null)
            {
                label1.Text = $"Detalles de {listBox1.SelectedItem}";
                button3.Visible = true; 
            }
        }


        private void label1_Click(object sender, EventArgs e)
        {

        }

        private void button3_Click(object sender, EventArgs e)
        {
            textBox1.Visible = true; // Cuadro de texto para comentarios
            button2.Visible = true;  // Botón para enviar comentarios
        }

        private void textBox1_TextChanged(object sender, EventArgs e)
        {

        }

        private void button2_Click(object sender, EventArgs e)
        {
            string comment = textBox1.Text;
            if (!string.IsNullOrEmpty(comment))
            {
                MessageBox.Show($"Comentario enviado: {comment}");
                textBox1.Clear();
                textBox1.Visible = false;
                button2.Visible = false;
            }
            else
            {
                MessageBox.Show("El comentario no puede estar vacío.");
            }
        }

    }
}
